<?xml version="1.0" encoding="UTF-8"?>
<c:model
    xmlns:c="urn:webdetails/com/2012"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="urn:webdetails/com/2012 ../../../schema/com_2012.xsd"
    xmlns="http://www.w3.org/1999/xhtml">

    <c:functionType name="DataWhere" space="pvc.options.varia">
        <c:documentation>
            A function that filters datums being loaded.
        </c:documentation>
        <c:argument name="this" type="null" required="true">
            <c:documentation>
                The global JavaScript object.
            </c:documentation>
        </c:argument>
        <c:argument name="datum" type="pvc.data.Datum" required="true">
            <c:documentation>
                The datum being loaded.
            </c:documentation>
        </c:argument>
        <c:returns type="boolean">
            <c:documentation>
                <tt>true</tt> if the datum should be included,
                <tt>false</tt> if it should be excluded.
            </c:documentation>
        </c:returns>
    </c:functionType>
</c:model>
